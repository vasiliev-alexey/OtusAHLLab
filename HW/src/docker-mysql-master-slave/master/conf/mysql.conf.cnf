[mysqld]

skip-host-cache
skip-name-resolve

server-id = 1
# включаем gtid
gtid-mode = on
enforce_gtid_consistency = on

# включаем полусинхронную репликацию
#rpl_semi_sync_master_enabled
#rpl_semi_sync_master_timeout=5000


log_bin = /var/log/mysql/mysql-bin.log
binlog_format = ROW
binlog_do_db = mydb


